<div class="cart-secondary-actions">
  <div class="cart-secondary-actions__continue">
    <%= link_to t('spree.continue_shopping'), products_path %>
  </div>

  <div class="cart-secondary-actions__empty">
    <%= form_tag empty_cart_path, method: :put do %>
      <%= render(
        'spree/components/buttons/button_inline',
        content: t('spree.empty_cart'),
        name: :commit,
        small: true,
        type: :submit
      ) %>
    <% end %>
  </div>
</div>
