<%
  html = { class: "auth-form" }
  url = spree.create_new_session_path
%>

<%= form_for Spree::User.new, as: :spree_user, url: url, html: html do |f| %>
  <div class="auth-form__input-wrapper">
    <%= render(
      "spree/components/forms/inputs/text",
      id: :spree_user_email,
      label: I18n.t("spree.email"),
      name: 'spree_user[email]',
      placeholder: "name@example.com",
      type: :email
    ) %>
  </div>
  <div class="auth-form__input-wrapper">
    <%= render(
      "spree/components/forms/inputs/text",
      id: :spree_user_password,
      label: I18n.t("spree.password"),
      name: 'spree_user[password]',
      placeholder: "p455w0rd",
      type: :password
    ) %>
  </div>
  <div class="auth-form__input-wrapper">
    <%= f.check_box :remember_me, tabindex: 3 %>
    <%= f.label :remember_me, I18n.t("spree.remember_me") %>
  </div>
  <div class="auth-form__input-wrapper">
    <%= render(
      "spree/components/buttons/button_primary",
      content: I18n.t("spree.login"),
      full_width: true,
      name: :commit,
      type: :submit
    ) %>
  </div>

  <%= I18n.t("spree.or") %> <%= link_to I18n.t("spree.create_a_new_account"), spree.signup_path %> | <%= link_to I18n.t("spree.forgot_password"), spree.recover_password_path %>
<% end %>
